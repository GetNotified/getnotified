<%= simple_form_for(@notification) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.association :service %>
    <%= f.input :type %>
    <%= f.input :conditions %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
